{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "watch": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "github-auth": ["src/types/github-auth"],
      "services/*": ["src/services/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/types"]
}
